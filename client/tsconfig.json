{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "types": [
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*",
        "./src/*",
        "./dist/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "hooks/*": [
        "src/common/hooks/*"
      ],
      "components/*": [
        "src/common/components/*"
      ],
      "api/*": [
        "src/api/*"
      ],
      "store/*": [
        "src/store/*"
      ],
      "common/*": [
        "src/common/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}